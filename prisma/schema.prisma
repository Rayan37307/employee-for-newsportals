generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String          @unique
  emailVerified  DateTime?
  image          String?
  password       String?
  role           UserRole        @default(USER)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  accounts       Account[]
  notifications  Notification[]
  sessions       Session[]
  socialAccounts SocialAccount[]
  templates      Template[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Template {
  id           String           @id @default(cuid())
  name         String
  description  String?
  category     TemplateCategory @default(CUSTOM)
  canvasData   Json
  thumbnail    String?
  isPublic     Boolean          @default(false)
  isSystem     Boolean          @default(false)
  userId       String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  newsCards    NewsCard[]
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
  @@map("templates")
}

model NewsCard {
  id            String       @id @default(cuid())
  imageUrl      String?
  status        CardStatus   @default(DRAFT)
  sourceData    Json
  templateId    String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  template      Template     @relation(fields: [templateId], references: [id], onDelete: Cascade)
  posts         Post[]

  @@index([templateId])
  @@index([status])
  @@index([createdAt])
  @@map("news_cards")
}

model SocialAccount {
  id             String         @id @default(cuid())
  platform       SocialPlatform
  pageId         String
  pageName       String
  accessToken    String
  refreshToken   String?
  tokenExpiresAt DateTime?
  isActive       Boolean        @default(true)
  userId         String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  posts          Post[]
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([platform, pageId])
  @@index([userId])
  @@map("social_accounts")
}

model Post {
  id              String        @id @default(cuid())
  content         String
  scheduledFor    DateTime?
  postedAt        DateTime?
  status          PostStatus    @default(QUEUED)
  errorMessage    String?
  platformUrl     String?
  platformPostId  String?
  metrics         Json?
  newsCardId      String
  socialAccountId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  newsCard        NewsCard      @relation(fields: [newsCardId], references: [id], onDelete: Cascade)
  socialAccount   SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)

  @@index([scheduledFor])
  @@index([newsCardId])
  @@index([socialAccountId])
  @@map("posts")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@map("notifications")
}

model Font {
  id        String   @id @default(cuid())
  name      String
  family    String   @unique
  filename  String
  fileUrl   String
  userId    String
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("fonts")
}

model AutopilotSettings {
  id              String   @id @default(cuid())
  isEnabled       Boolean  @default(false)
  templateId      String?
  checkInterval   Int      @default(15) // minutes
  generateCards   Boolean  @default(true)
  sensitiveFilter Boolean  @default(true)
  notifyOnNewCard Boolean  @default(true)
  lastRunAt       DateTime?
  lastError       String?
  userId          String   @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([isEnabled])
  @@map("autopilot_settings")
}

model AutopilotRun {
  id           String          @id @default(cuid())
  status       AutopilotStatus @default(RUNNING)
  startedAt    DateTime        @default(now())
  completedAt  DateTime?
  newsFound    Int             @default(0)
  cardsCreated Int             @default(0)
  skipped      Int             @default(0)
  errors       String?
  userId       String

  @@index([userId])
  @@index([startedAt])
  @@map("autopilot_runs")
}

model PostedLink {
  id        String   @id @default(cuid())
  url       String   @unique
  title     String
  source    String   @default("bangladesh_guardian")
  postedAt  DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([url])
  @@index([source])
  @@map("posted_links")
}

model SensitiveWord {
  id        String   @id @default(cuid())
  word      String   @unique
  isActive  Boolean  @default(true)
  userId    String
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([isActive])
  @@map("sensitive_words")
}

enum UserRole {
  USER
  ADMIN
}

enum TemplateCategory {
  BREAKING_NEWS
  ANALYSIS
  OPINION
  PHOTO_STORY
  INFOGRAPHIC
  QUOTE
  CUSTOM
}

enum CardStatus {
  DRAFT
  GENERATED
  POSTED
  FAILED
  QUEUED
}

enum SocialPlatform {
  FACEBOOK
  TWITTER
  LINKEDIN
  INSTAGRAM
}

enum PostStatus {
  QUEUED
  POSTING
  POSTED
  FAILED
}

enum AutopilotStatus {
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}
